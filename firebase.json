{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/api/**", "function": "remixServer" },
      { "source": "**", "function": "remixServer" }
    ]
  },
  "functions": {
    "source": "functions"
  }
}
